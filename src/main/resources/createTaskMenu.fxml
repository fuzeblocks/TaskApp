<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!-- Message from the creator, the style was done by ChatGPT because I don't know FXML in any way. On the other hand all the code was written by me and is my intellectual property. Thanks -->

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.fuzeblocks.taskapp.viewers.controllers.CreateTaskController">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40px; -fx-background-color: #333;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40px; -fx-background-color: #333;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">

            <!-- Titre -->
            <VBox alignment="CENTER" fillWidth="false" spacing="5">
                <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #fff;" text="Titre" />
                <TextField fx:id="titleField" prefHeight="36.0" prefWidth="448.0" promptText="Entrez le titre" style="-fx-font-size: 14px; -fx-background-color: #424242; -fx-background-radius: 10px; -fx-padding: 10px; -fx-border-width: 1px; -fx-border-color: #ccc; -fx-text-fill: #fff;" />
            </VBox>

            <!-- Saut de ligne -->
            <Label style="-fx-font-size: 8px;" text="" />

            <!-- Sous-titre -->
            <VBox alignment="CENTER" fillWidth="false" spacing="5">
                <Label fx:id="subTitleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #fff;" text="Sous-titre" />
                <TextField fx:id="subTitleField" prefHeight="40.0" prefWidth="448.0" promptText="Entrez le sous-titre" style="-fx-font-size: 14px; -fx-background-color: #424242; -fx-background-radius: 10px; -fx-padding: 10px; -fx-border-width: 1px; -fx-border-color: #ccc; -fx-text-fill: #fff;" VBox.vgrow="NEVER" />
            </VBox>

            <!-- Autres éléments à ajouter -->

        </VBox>

        <!-- Priority section -->
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px; -fx-background-color: #333; -fx-border-radius: 10px; -fx-border-width: 1px;">
         <Label text="Label" />
            <Label fx:id="priorityLabel" alignment="CENTER" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #fff;" text="Priorité" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="greenButton" style="-fx-background-color: lightgreen; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px; -fx-text-fill: #333;" text="Faible" />
                <Button fx:id="yellowButton" style="-fx-background-color: lightyellow; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px; -fx-text-fill: #333;" text="Moyen" />
                <Button fx:id="coralButton" style="-fx-background-color: lightcoral; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px; -fx-text-fill: #333;" text="Élevé" />
            </HBox>
         <HBox alignment="BOTTOM_CENTER" nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button fx:id="createButton" alignment="CENTER" mnemonicParsing="false" onAction="#createTask" prefHeight="40.0" prefWidth="502.0" style="-fx-background-color: #00B600; -fx-font-size: 14px; -fx-padding: 10px; -fx-text-fill: #333;" text="Ajouter" />
            </children>
         </HBox>
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelCreateTask" prefHeight="70.0" prefWidth="145.0" style="-fx-background-color: #B60000; -fx-font-size: 14; -fx-padding: 5px;" text="Retour" />
        </VBox>

    </VBox>
</AnchorPane>
